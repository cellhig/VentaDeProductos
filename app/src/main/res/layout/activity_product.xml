<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.higom.edpdm.ventadeproductos.ProductActivity">

    <ImageView
        android:id="@+id/imageViewProducto"
        android:layout_width="384dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewProductoDetalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewProductoDetalle"
        android:layout_width="385dp"
        android:layout_height="239dp"
        android:text="@string/text1"
        app:layout_constraintBottom_toTopOf="@+id/buttonComprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProducto" />

    <Button
        android:id="@+id/buttonComprar"
        android:layout_width="157dp"
        android:layout_height="67dp"
        android:text="Comprar"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="445dp" />
</android.support.constraint.ConstraintLayout>
